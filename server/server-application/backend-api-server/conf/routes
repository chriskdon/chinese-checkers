# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           		   controllers.Application.index

# User Tasks
POST	/users/register/:username			       controllers.UserController.register(username: String)
POST	/users/change/:userId/:username			 controllers.UserController.change(userId: Long, username: String)

# Game Setup Tasks
POST  /games/join/:playerCount/:userId     controllers.GameSetupController.join(playerCount: Integer, userId: Long)
POST  /games/forfeight/:gameId/:userId     controllers.GameSetupController.forfeight(gameId: Long, userId: Long)
GET   /games/:gameId/gamestate             controllers.GameSetupController.gamestate(gameId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                      controllers.Assets.at(path="/public", file)
